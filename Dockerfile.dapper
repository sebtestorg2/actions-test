FROM golang:1.17-alpine

ARG DAPPER_HOST_ARCH
ENV ARCH $DAPPER_HOST_ARCH

RUN apk -U add bash

ENV DAPPER_ENV REPO TAG DRONE_TAG GOGET_MODULE GOGET_VERSION
ENV DAPPER_SOURCE /go/src/github.com/superseb/actions-test
ENV DAPPER_OUTPUT ./dat1 ./go.mod ./go.sum
ENV HOME ${DAPPER_SOURCE}
WORKDIR ${DAPPER_SOURCE}

ENTRYPOINT ["./scripts/entry"]
CMD ["go-generate"]
